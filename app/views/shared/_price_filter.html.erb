<h4>Prijs</h4>

<div class="priceblock">
  <% if params[:search].present? && params[:search][:price_range_any].present? %>
    <input type='hidden' name='search[price_range_any][0]' value="<%= params[:search][:price_range_any]['0'] %>"/>
    <input type='hidden' name='search[price_range_any][1]' value="<%= params[:search][:price_range_any]['1'] %>"/>
  <% else %>
    <input type='hidden' name='search[price_range_any][0]' value="0"/>
    <input type='hidden' name='search[price_range_any][1]'value="100"/>
  <% end %>
  <div class="noUiSlider"></div>
  <input id="min-euro" type="text"/>
  <input id="max-euro" type="text"/>

  <div class="clearfix"></div>
  <br/>
  <div class="filter-reset">
    <%= image_tag('frontend/reset.png') %>
    <%= link_to 'Reset filter', '/products', rel: 'no-follow' %>
  </div>
</div>
