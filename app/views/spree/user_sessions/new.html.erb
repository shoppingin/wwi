<div class='content auth'>
  <div class='content-header' style="width: 200px">
    <h2><%= Spree.t(:login_as_existing) %></h2>
  </div>
  <hr/>
  <div id="existing-customer" class='centeral_block'>
    <div>
      <%= form_for Spree::User.new, :as => :spree_user, :url => spree.create_new_session_path do |f| %>
        <%= render :partial => 'spree/shared/login', locals: {f: f} %>
        <div class="actions">
          <div class="alternative">
            <%= Spree.t(:or) %>&nbsp;<%= link_to Spree.t(:create_a_new_account), spree.signup_path %>
          </div>
          <div style="main-actions">
            <%= f.submit Spree.t(:login), :class => 'main-button', :tabindex => 4 %>
          </div>
          <div class='clearfix'/>
        </div>
      <% end %>

    </div>
    <div data-hook="login_extras"></div>
  </div>
</div>
